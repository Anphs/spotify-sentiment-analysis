{
  "manifest_version": 3,
  "name": "Vibe Check",
  "version": "1.0.0",
  "description": "Fetches the currently playing Spotify song and checks its vibe",
  "permissions": ["identity", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/auth.js",
    "type": "module"
  }
}
